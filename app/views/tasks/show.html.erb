<h1><%= @task.title %></h1>

<p><%= @task.details %></p>

<% if @task.completed %>
<i class="fa fa-check-square-o"></i>This task is completed.
<% else %>
<i class="fa fa-square-o"></i>This task is not yet complete.
<% end %>

<%= link_to "Edit task", edit_task_path %>
<%= link_to "Delete task",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>
